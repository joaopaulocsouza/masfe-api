generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = "postgresql://postgres:Cl0d0V1l10@@localhost:5432/MASFe"
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  gender     String?
  occupation String?
  address    String?
  birthday   DateTime?

  verbs Verb[]

  @@map("users")
}

model Verb {
  id        String @id @default(uuid())
  verb      String @unique
  garret    Int
  dimension Int
  user_id   String
  user      User   @relation(fields: [user_id], references: [id])

  @@index([user_id], name: "user_id_fk")
  @@map("verb")
}
