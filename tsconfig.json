{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "public/**/*"],
  "exclude": ["node_modules"]
}